@using UltraSoundWeb.Entities
@model PatientVM;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chỉnh sửa bệnh nhân";
    var cate = ViewData["patient"] as Patient;
}
<a href="/patients" class="btn btn-outline-danger mb-3">Quay lại</a>
<form class="user w-50" action="/patients/edit" method="post">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group ">
        <p>Mã số bệnh nhân</p>
        <input asp-for="@Model.IdentityNumber" class="form-control form-control-user mb-3"
               required placeholder="Mã số bệnh nhân" />
        <p>Tên</p>
        <input asp-for="@Model.Name" class="form-control form-control-user mb-3"
               required placeholder="Tên bệnh nhân" />
        <p>Giới tính</p>
        <input asp-for="@Model.Gender" class="form-control form-control-user mb-3"
               required placeholder="Giới tính" />
        <p>Năm sinh</p>
        <input asp-for="@Model.BirthYear" class="form-control form-control-user mb-3"
               required placeholder="Năm sinh" />
        <p>Địa chỉ</p>
        <input asp-for="@Model.Address" class="form-control form-control-user mb-3"
               required placeholder="Địa chỉ" />
        <p>Số điện thoại</p>
        <input asp-for="@Model.PhoneNumber" class="form-control form-control-user mb-3"
               required placeholder="Số điện thoại" />
        <p>Mã BHYT</p>
        <input asp-for="@Model.InsuranceNumber" class="form-control form-control-user mb-3"
               placeholder="Mã BHYT" />
    </div>
    <div class="mt-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-user btn-block">
            Chỉnh sửa
        </button>
    </div>
</form>